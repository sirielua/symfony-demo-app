<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="{{ app.request.locale }}">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    
    {# CSRF Token #}
    <meta name="csrf-token" content="{{ csrf_token('meta') }}" />

    <title>{{ app_name }} - {% block title %}{{ app_title }}{% endblock %}</title>
    <meta name="description" content="{% block description %}{{ app_description }}{% endblock %}" />
    <meta name="keywords" content="{% block keywords %}{{ app_keywords }}{% endblock %}" />
    <meta name="author" content="{{ app_author }}" />

    {# Fonts #}
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    <div id="app">
        {# Page Header #}
        {{ include('_layouts/fragments/_header.html.twig') }}
        {# Page Notifications (flashes) #}
        {{ include('_layouts/fragments/_notifications.html.twig') }}
        
        <main class="py-4">
            {# Page Content #}
            {% block content %}{% endblock %}
        </main>
    </div>
        
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>